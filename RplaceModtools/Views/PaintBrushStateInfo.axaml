<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:RplaceModtools.ViewModels"
             xmlns:rplaceModtools="clr-namespace:RplaceModtools"
             mc:Ignorable="d"
             x:Class="RplaceModtools.Views.PaintBrushStateInfo">
  
    <Design.DataContext>
        <viewModels:PaintBrushStateInfoViewModel/>
    </Design.DataContext>

    <UserControl.DataContext>
        <viewModels:PaintBrushStateInfoViewModel/>
    </UserControl.DataContext>
    
    <UserControl.Resources>
        <rplaceModtools:ShapeEmojiConverter x:Key="ShapeEmojiConverter"/>
    </UserControl.Resources>
  
    <StackPanel x:Name="InfoPanel">
        <Design.DataContext><viewModels:MainWindowViewModel/></Design.DataContext>
        <TextBlock FontSize="16">Brush radius:</TextBlock>
        <NumericUpDown Minimum="1" Maximum="4" Height="16" Value="{Binding CurrentPaintBrushRadius }"/>      
        <TextBlock FontSize="16">Brush shape:</TextBlock>
        <ToggleButton Content="{Binding CurrentBrushShape, Converter={StaticResource ShapeEmojiConverter}}"/>
    </StackPanel>
</UserControl>
