<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:RplaceModtools.ViewModels"
             mc:Ignorable="d"
             x:Class="RplaceModtools.Views.LiveCanvasStateInfo"
             HorizontalAlignment="Stretch"
             Height="16">
  
    <Design.DataContext>
        <viewModels:LiveCanvasStateInfoViewModel/>
    </Design.DataContext>
    <UserControl.DataContext>
        <viewModels:LiveCanvasStateInfoViewModel/>
    </UserControl.DataContext>
  
    <TextBlock Foreground="Yellow">⚠️ Warning: You are not on the live canvas, therefore any edits will not be applied.</TextBlock>
</UserControl>
