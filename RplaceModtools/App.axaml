<Application
    x:Class="RplaceModtools.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:local="using:RplaceModtools"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="PanelBackgroundBrush">White</SolidColorBrush>
                    <SolidColorBrush x:Key="WindowBackgroundBrush">#FFA9A9A0</SolidColorBrush>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="PanelBackgroundBrush">#2E2E2E</SolidColorBrush>
                    <SolidColorBrush x:Key="WindowBackgroundBrush">#1A1A1AA0</SolidColorBrush>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme DensityStyle="Normal" />
    </Application.Styles>

</Application>
